{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier", "eslint:recommended"],
    "plugins": ["import"],
    "rules": {
        "import/no-import-module-exports": ["off"],
        "import/extensions": [
            "error",
            {
                "js": "never"
            },
            {
              "json": "always"
            }
        ],
        "import/no-extraneous-dependencies": ["off"],
        "no-console": ["off"],
        "no-param-reassign": ["warn"],
        "camelcase": ["error"],
        "func-names": ["off"],
        "no-implicit-globals": ["error"],
        "no-unused-expressions": ["error"],
        "no-var": ["error"],
        "no-useless-return": ["error"],
        "prefer-arrow-callback": ["error"],
        "prefer-const": ["error"],
        "consistent-return": ["error"],
        "max-lines": ["warn", 50],
        "max-params": ["warn", 3]
    },
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    }
}
