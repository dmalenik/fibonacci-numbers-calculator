{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["import"],
    "rules": {
        "import/no-import-module-exports": ["off"],
        "import/extensions": [
            "error",
            {
                "js": "never"
            }
        ],
        "import/no-extraneous-dependencies": ["off"],
        "no-console": ["off"],
        "no-param-reassign": ["warn"]
    },
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    }
}
